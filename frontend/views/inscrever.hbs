<h2 class="mb-3">Inscreva-se em: {{oportunidade.titulo}}</h2>

{{#if erro}}
  <div class="alert alert-danger">{{erro}}</div>
{{/if}}

<form method="POST" action="/oportunidades/{{oportunidade.id}}/inscrever">
  <div class="mb-3">
    <label for="mensagem" class="form-label">Mensagem para a ONG (opcional)</label>
    <textarea class="form-control" id="mensagem" name="mensagem" rows="3"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Enviar inscrição</button>
  <a href="/oportunidades/{{oportunidade.id}}" class="btn btn-secondary">Voltar</a>
</form>
