<h1 class="titulo_o">Oportunidades Dispon√≠veis</h1>
<div class="row">
  {{#each oportunidades}}
    <div class="col-md-6 mb-3">
      <div class="card shadow rounded-3 border-0 card-opportunity d-flex flex-row align-items-stretch">
        <div class="card-body d-flex flex-column justify-content-between" style="flex:2; min-width:0;">
          <div>
            <h5 class="card-title">{{titulo}}</h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ong_nome}}</h6>
            <p class="card-text"><strong>Onde:</strong> {{lugar}}</p>
            <p class="card-text"><strong>Mensagem:</strong> {{msg_rapida}}</p>
            <p class="card-text"><strong>Quando:</strong> {{formatDate data_realizacao}}</p>
          </div>
          <a href="/oportunidades/{{id}}" class="btn btn-primary btn-sm mt-2">Ver detalhes</a>
        </div>
        <div class="d-flex align-items-center justify-content-center" style="flex:1; min-width:120px;">
          <img src="{{foto_perfil_ong}}" alt="Logo da ONG" class="avatar-ong" />
        </div>
      </div>
    </div>
  {{/each}}
</div>
